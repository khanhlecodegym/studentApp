@page
@model StudentApp.Pages.Students.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>@Model.Message</h1>

<form method="get">
    <div class="input-group">
        <input type="search" asp-for="SearchKeyWord" />
        <span>
            <button>
                <i class="fa fa-car" style="font-size: 24px"></i>
            </button>
        </span>
    </div>
</form>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Skill</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    @foreach (var student in Model.Students)
    {
        <tr>
            <td>@student.Name</td>
            <td>@student.Address</td>
            <td>@student.Skill</td>
            <td>
                <a class="btn btn-primary" asp-page="./Detail" asp-route-studentId="@student.Id"> Detail</a>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-studentId="@student.Id"> Edit</a>
            </td>
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Add New</a>


@section footer {
    <h3>I am a Developer of CodeGym Company</h3>
}

